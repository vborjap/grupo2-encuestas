<div class="text-center">
    <h1>Ver Respuestas de las encuestas</h1>
</div>
<div class="card mt-5">
  <div class="card-body">

   <form action="/respuestas" method="get">
     <div class="input-group mb-3">
      <input
        type="text"
        class="form-control"
        name="buscar"
        placeholder="Recipient's username"
        aria-label="Recipient's username"
        aria-describedby="button-addon2"
      />
      {{> buttons
        type="success"
        message="Buscar"
        nativeType="submit"}}
    </div>
   </form>

    {{!-- Tabla de contenidos   --}}

<h5>Encuestas realizadas</h5>
<table class="table">
  <thead>
    <tr>
      <th scope="col"><p class="text-center">Encuestas</p></th>
      <th scope="col"></th>
    </tr>
  </thead>
  
  <tbody>
   
      {{#each datos}}
    <tr>
      <th><p>{{this.nomEncuesta}}</p></th>
      <th> 
        {{> buttons
              message= "Ver respuestas"
              type= "success"
              tag = "a"
              href= (link "/respuestas" this._id)
        }}
      </th>
    </tr>
    {{/each}}
   
  </tbody>
</table>
  </div>
</div>

