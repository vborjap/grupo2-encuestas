<br></br>
<div class="text-center">
    <h1>Ver Encuestas</h1>
</div>
<br></br>
<div >
    {{> buttons
    message="Crear Encuesta"
    type = "primary"
    tag = "a"
    href = "http://localhost:3000/encuestas/crear"
    }}
</div>

<div class="card mt-5">
    <div class="card-body">
        <form action="" method="POST">
            <div class="input-group mb-3">
                <input 
                    type="search"
                    class="form-control" 
                    placeholder="Nombre de la encuesta" 
                    aria-label="Nombre de la encuesta"
                    name="busqueda"
                    aria-describedby="search-addon2" />
                        <button type="submit" class="btn btn-success">Buscar</button>
            </div>
        </form>
        
        {{!-- Tabla de contenidos --}}
        {{!--<table class="table">--}}
        <table id="grid" class="table table-striped table-bordered dt-responsive nowrap">
            <thead class="thead-light">
                <tr>
                    <th>Nombre de la encuesta</th>
                    <th>Encuestador</th>
                    <th width="25%">Acciones</th>
                </tr>
            </thead>

            <tbody>
                {{#each encuestas}}
                    {{#if this.activa}}
                    <tr>
                        <td>{{this.nomEncuesta}}</td>
                        <td>{{this.nomEncuesta}}</td>
                        <!--Ver-->
                        <td class="d-flex">     
                            <button type="button" class="btn btn-success me-1" href="http://localhost:3000/encuestas/ver/{{this._id}}">Ver</button>  
                        
                            <!--Editar-->
                            <a href="http://localhost:3000/encuestas/editar/{{this._id}}"><button type="submit" class="btn btn-warning me-1" >Editar</button></a>
                            <!--Eliminar-->
                            <form action="encuestas/eliminar" method="POST">
                                <div class="form-group">
                                    <button class="btn btn-danger me-1" type="submit" name="identificador" value={{this._id}}>Eliminar</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{/if}}
                    {{else}}
                        <div class="card mx-auto">
                            <div class="lead  d-flex flex-column align-items-center">
                                <br></br>
                                <p>No hay encuestas ingresadas a√∫n</p>
                                <a href="/encuestas/crear" class="btn btn-success btn-block">Crear una</a>
                                <br></br>
                            </div>
                        </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
