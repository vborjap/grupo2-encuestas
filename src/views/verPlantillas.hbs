<br></br>
<div class="text-center">
    <h1>Ver Encuestas</h1>
</div>
<br></br>
<div >
    {{> buttons
    message="Crear Encuesta"
    type = "success"
    tag = "a"
    href = "http://localhost:3000/encuestas/crear"
    }}
</div>

<div class="card mt-5">
    <div class="card-body">
        <div class="input-group mb-3">
            <input 
                type="text" 
                class="form-control" 
                placeholder="Nombre de la encuesta o encuestador" 
                aria-label="Nombre de la encuesta o encuestador"
                name="nomEncuesta"
                aria-describedby="button-addon2" />
            {{> buttons
            type="success"
            message="Buscar"
            nativeType="submit"
            }}
        </div>

        {{!-- Tabla de contenidos --}}
        <!--<table id="grid" class="table table-striped table-bordered dt-responsive nowrap">/-->
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th >Nombre de la encuesta</th>
                    <th >Encuestador</th>
                    <th >Acciones</th>
                </tr>
            </thead>

            <tbody>
                {{#each encuestas}}
                {{#if this.activa}}
                    <tr>
                        <td>{{this.nomEncuesta}}</td>
                        <td>{{this.nomEncuesta}}</td>
                        <!--Ver-->
                        <td class="d-flex">     
                            <button type="button" class="btn btn-success me-5 ms-5 " href="http://localhost:3000/encuestas/ver/{{_id}}">Ver</button>  
                        
                         <!--Editar-->
                         <a href="http://localhost:3000/encuestas/editar/{{_id}}"><button type="submit" class="btn btn-warning me-5 " >Editar</button></a>
                         <!--Eliminar-->
                            <form action="" method="POST">
                                <div class="form-group">
                                    <button class="btn btn-danger me-5" type="submit" name="identificador" value={{this._id}}>Eliminar</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{/if}}
                    {{else}}
                        <div class="card mx-auto">
                            <div class="lead  d-flex flex-column align-items-center">
                                <br></br>
                                <p>No hay encuestas ingresadas a√∫n</p>
                                <a href="/encuestas/crear" class="btn btn-success btn-block">Crear una</a>
                                <br></br>
                            </div>

                        </div>
                    </div>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>