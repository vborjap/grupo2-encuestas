<center>
    <br></br>
    <div class="text-center">
        <h1>Editar Usuario</h1>
    </div>
    <br></br>
    <div class="card w-75">
        <div class="card-body">
            <form action="/usuarios/modificarUsuario" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name" class="col-form-label">Nombre Usuario</label>
                        <input type="text" class="form-control" name="name" value={{name}}>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="fechaNac" class="col-form-label">Fecha Nacimiento</label>
                        <input type="date" class="form-control" name="fechaNac">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="nacionalidad" class="col-form-label">Nacionalidad</label>
                        <select class="form-select" name="nacionalidad" aria-label="Default select example"
                            class="form-control">
                            <option value="Costaricense">Costaricense</option>
                            <option value="Guatemalteco">Guatemalteco</option>
                            <option value="Hondureño">Hondureño</option>
                            <option value="Nicaraguense">Nicaraguense</option>
                            <option value="Panameño">Panameño</option>
                            <option value="Salvadoreño" selected>Salvadoreño</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="email" class="col-form-label">Correo Electronico</label>
                        <input type="email" class="form-control" name="email" value="">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="userName" class="col-form-label">ID Usuario</label>
                        <input type="text" class="form-control" name="userName" value="">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="password" class="col-form-label">Contraseña</label>
                        <input type="password" class="form-control" name="password">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="tipoUsuario" class="col-form-label">Rol de Usuario</label>
                        <select class="form-select" name="tipoUsuario" aria-label="Default select example"
                            class="form-control">
                            <option value="Administrador">Administrador</option>
                            <option value="Diseñador">Diseñador</option>
                            <option value="Encuetador" selected>Encuestador</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <br>
                    <button class="btn btn-primary btn-block"> Editar Usuario </button>
                </div>
            </form>
        </div>
    </div>