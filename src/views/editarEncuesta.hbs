<div class="row">
    <div class="col-12">
        <h1 class="text-center">Editar encuesta</h1>
    </div>
</div>
<!--Form-->
<form action="" method="POST">
    
    <div class="row me-1">
    <div class="col-12 text-end ">
         <button  type="submit" class="btn btn-success mt-2" >Actualizar Encuesta</button>
   </div>
</div>
<div class="container bg-bg-light">
     <!--Nombre encuesta-->
    <div class="row mt-3">
    <div class="col-4 text-end">
        <p>Ingresa el nombre de la encuesta:</p>
    </div>
    <div class="col-8">
        <input class="w-75"type="text" name="nomEncuesta" value="{{editar.nomEncuesta}}" required >
    </div>
    </div>
    <!--Descripcion-->
    <div class="row">
        <div class="col-4 text-end">
            Descripci√≥n:
        </div>
        <div class="col-8">
            <textarea name="descripcion" cols="30" rows="10" class="w-75">{{editar.descripcion}}</textarea>
        </div>
    </div>
     <!--Secciones-->
     <div class="row mt-5 d-flex justify-content-end">
        <div class="col-3">
            <select class="form-select" aria-label="Default select example" name="secciones">
                <option selected value="{{editar.secciones}}">{{editar.secciones}}</option>
                <option value="Uno">One</option>
                <option value="Dos">Two</option>
                <option value="Tres">Three</option>
            </select>
        </div>
</form>

        <div class="col-8">
             <!--Tabla-->
        <table class="table w-75 text-center">
         <thead>
                 <tr>
                    <th scope="col">Secciones</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
         </thead>
         <tbody>
               {{#each registros}}
                <!--<li>{{this}}</li>-->
           
                 <tr>
                     <td>{{secciones}}</td>
                     <td>{{nomEncuesta}}</td>
                     <td><button type="button" class="btn btn-success">Ver Preguntas</button></td>
                </tr>
            {{/each}}
          </tbody>
       </table>
        </div>
     </div>
</div>
